{
  "manifest_version": 3,
  "name": "PrivPrompt Redirect",
  "version": "0.2",
  "description": "Inspect ChatGPT page requests via a local proxy",
  "icons": {
    "16": "icons/privprompt_icon_16.png",
    "32": "icons/privprompt_icon_32.png",
    "48": "icons/privprompt_icon_48.png",
    "128": "icons/privprompt_icon_128.png"
  },
  "permissions": ["storage", "browsingData", "notifications", "declarativeNetRequest"],
  "host_permissions": ["https://chatgpt.com/*", "https://*.chatgpt.com/*", "http://localhost/*"],
  "background": { "service_worker": "service_worker.js" },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/privprompt_icon_16.png",
      "32": "icons/privprompt_icon_32.png",
      "48": "icons/privprompt_icon_48.png",
      "128": "icons/privprompt_icon_128.png"
    }
  },
  "declarative_net_request": {
    "rule_resources": [{ "id": "rules", "enabled": true, "path": "rules.json" }]
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*", "https://*.chatgpt.com/*"],
      "js": ["content_script.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["toast.css", "injected.js"],
      "matches": ["https://chatgpt.com/*", "https://*.chatgpt.com/*"]
    }
  ]
}
